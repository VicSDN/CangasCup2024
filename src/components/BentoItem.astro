---
interface Props {
  class?: string;
  title: string;
  subtitle?: string;
}

const { title, subtitle } = Astro.props;
---

<arti
  class={`
${Astro.props.class}
relative rounded-xl
backdrop-blur-md
border border-black/10
shadow-inner shadow-white/10
`}
>
  <slot name="image" />
  <div class="select-none flex flex-col gap-1 p-6 text-lg z-20 justify-end h-full">
    <h2 class="text-3xl text-balanced text-white mb-4">{title}</h2>
    {subtitle && <h3 class="text-3xl font-semibold text-sky-200/80 mb-4">{subtitle}</h3>}

    <slot name="content" />
  </div>
</arti>
